{% extends 'base.html.twig' %}

{% block content %}
    <h1>Shedule</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shedule.id }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ shedule.year }}</td>
            </tr>
            <tr>
                <th>Month</th>
                <td>{{ shedule.month }}</td>
            </tr>
            <tr>
                <th>Fromday</th>
                <td>{% if shedule.fromDay %}{{ shedule.fromDay|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Today</th>
                <td>{% if shedule.toDay %}{{ shedule.toDay|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ shedule.hours }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('shedule_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('shedule_edit', { 'id': shedule.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
